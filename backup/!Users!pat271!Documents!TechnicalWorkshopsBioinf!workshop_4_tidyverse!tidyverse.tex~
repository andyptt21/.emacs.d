\section*{Tibble}
\label{sec:orgf84318d}
\begin{verbatim}
library(tidyverse)
lipid_data<-read.csv("AdiposeNegIDed.csv")
lipid_data<-as_tibble(lipid_data)
lipid_data
\end{verbatim}
