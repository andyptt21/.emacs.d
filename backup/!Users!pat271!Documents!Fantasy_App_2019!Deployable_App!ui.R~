                                             selectInput("power_rank_plot_selection","Category",choices = c("Power Rankings",
                                                                                                            "Standings",
                                                                                                            "Power Rank vs. Standing",
                                                                                                            "Skater Rank",
                                                                                                            "Goalie Rank"),
                                                         selected = "Power Rank vs. Standing"),
                                             tableOutput('power_rankings_table')
                                           ),
